version: '3.8'

services:
  game-api:
    build:
      context: ./RockPaperScissorsLizardSpock.WebApi  # Path to the folder containing the Dockerfile
      dockerfile: Dockerfile
      args:
        - BUILD_CONFIGURATION=Release
    ports:
      - "8080:8080"
      - "8081:8081"
    environment:
      - ASPNETCORE_ENVIRONMENT=Production
    networks:
      - game-network

networks:
  game-network:
    driver: bridge
